<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/orange_light">

    <!-- Hình nền -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/top_background1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView Chào mừng -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome\nBack"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="30sp"
        android:paddingLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/backgroundImage"
        android:layout_marginTop="16dp" />

    <!-- Icon và TextInput Email -->
    <LinearLayout
        android:id="@+id/emailContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/email"
            android:layout_gravity="center"
            android:tint="@color/blue" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:hint="Email"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <!-- Icon và TextInput Password -->
    <LinearLayout
        android:id="@+id/passwordContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/emailContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/password"
            android:tint="@color/blue" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:hint="Password"
            android:inputType="textPassword" />
    </LinearLayout>

    <!-- Button mũi tên -->
    <ImageView
        android:id="@+id/arrowButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/btn_arraw1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/passwordContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:elevation="4dp" />

    <!-- Nút Facebook -->
    <Button
        android:id="@+id/facebookButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/button_background"
        android:text="Facebook"
        android:textColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/arrowButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/googleButton"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="40dp"/>

    <!-- Nút Google -->
    <Button
        android:id="@+id/googleButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/button_background"
        android:text="Google"
        android:textColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/arrowButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/facebookButton"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google"
                android:textColor="@color/blue"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/google"
                android:tint="@color/blue" />
        </LinearLayout>
    </Button>


    <!-- Link Đăng ký -->
    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you new user? Register"
        android:textColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/facebookButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>